---
import { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
    description: string;
}

const { class: classes, target, description, ...rest } = Astro.props;
---

<a
    class="inline-block rounded-md border-2 border-neutral-200 bg-neutral-900 p-6 hover:border-neutral-100 hover:bg-neutral-800"
    target="_blank"
    {...rest}
>
    <div><slot /></div>
    <div class="text-neutral-500">{description}</div>
</a>
