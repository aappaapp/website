        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:astro/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "source Type": "module"
    },
    "rules": {},
